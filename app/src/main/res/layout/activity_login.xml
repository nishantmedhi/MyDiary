<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nmedh.mynote.Login">

    <TextView
        android:id="@+id/nameperson"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="99dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toTopOf="@+id/emailperson"
        android:layout_marginBottom="35dp" />

    <ImageView
        android:id="@+id/imageperson"
        android:layout_width="121dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/nameperson"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emailperson"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:text="TextView"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="@+id/nameperson"
        android:layout_marginTop="207dp"
        app:layout_constraintLeft_toLeftOf="@+id/nameperson"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logoutperson"
        android:layout_width="91dp"
        android:layout_height="48dp"
        android:text="Logout"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="86dp"
        app:layout_constraintTop_toBottomOf="@+id/emailperson"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.539" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/loginperson"
        android:layout_width="210dp"
        android:layout_height="41dp"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/logoutperson"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/emailperson"
        android:layout_marginBottom="23dp">

    </com.google.android.gms.common.SignInButton>
</android.support.constraint.ConstraintLayout>
